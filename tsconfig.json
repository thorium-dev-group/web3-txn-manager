
{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolvePackageJsonImports": true,
    "target": "ES2022",
    "outDir": "dist",
    "composite": true,
    "rootDir": "./src"
  },
  "files": [],
  "exclude": [
    "**/impls_old/*", // TODO: cleanup old directory
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    "**/*.test.ts",
    "**/test/**/*.ts",
    "**/src/**/test/**"
  ],
  "include": [
    "src/**/*.json",
    "src/**/*.ts"
  ]
}
